{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "target": "es5"
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "emitRequireType": false,
        "useBabel":true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
